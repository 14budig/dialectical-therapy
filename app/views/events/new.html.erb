<%= simple_form_for @event, url: create_event_path, as: 'user_event' do |f| %>

  <div class='form_one'>
    <%= f.input :trigger, label: 'What was the prompting event?', placeholder: 'What happened right before? What may have been the trigger?' %>
    <%= f.input :behavior, label: 'Describe what happened.', placeholder: 'What was your reaction? What did you do? What was the behavior?' %>
  </div>
  <div class='form_two'>
    <%= f.input :before_notes, label: 'How did you feel right before?', placeholder: '(optional)' %><br>
    <%= f.input :after_notes, label: 'How do you feel now?', placeholder: '(optional)' %>
  </div>
  <div class='form_three'>
    <%= f.input :distraction, as: :check_boxes, label: 'Needed a Distraction', collection: ['']%>
    <%= f.input :soothing, as: :check_boxes, label: 'Self-Soothing', collection: ['']%>
    <%= f.input :improving, as: :check_boxes, label: 'Improving the Moment', collection: ['']%>
    <%= f.input :helpful, label: 'How did the behavior help you?' %>
    <%= f.input :hurtful, label: 'How did the behavior hurt you?' %>
  </div>
  <div class='form_four'>
    <%= f.input :reflection, label: 'What could you have done differently?', placeholder: 'Reflect on what you would want to do next time.' %>
    <%= f.input :victory, label: 'What are you proud of?', placeholder: 'Claim your victories!' %>
  </div>
  <div>
    <%= f.button :button, 'Back' %>
    <%= f.button :button, 'Next' %>
  </div>
  <div class='save_button'>
    <%= f.submit 'Save' %>
  </div>
<% end %>
