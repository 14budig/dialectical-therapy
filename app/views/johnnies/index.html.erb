<p id="notice"><%= notice %></p>

<h1>Johnnies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @johnnies.each do |johnny| %>
      <tr>
        <td><%= link_to 'Show', johnny %></td>
        <td><%= link_to 'Edit', edit_johnny_path(johnny) %></td>
        <td><%= link_to 'Destroy', johnny, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

